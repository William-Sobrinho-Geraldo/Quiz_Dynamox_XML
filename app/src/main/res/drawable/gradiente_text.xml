<?xml version="1.0" encoding="utf-8"?><!--<shape xmlns:android="http://schemas.android.com/apk/res/android">-->


<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item >

        <shape>
            <solid android:color="@android:color/transparent" />
            <stroke android:width="3dp" android:color="#FF5722" />

            <corners android:radius="8dp" />
        </shape>
    </item>

    <!--     Forma interna com a cor de fundo (ou transparente)-->
    <item android:bottom="8dp" android:left="8dp" android:right="8dp"  android:top="8dp">
        <shape>
            <solid android:color="@android:color/transparent" /> <!-- Pode ser transparente ou a cor de fundo desejada -->
            <corners android:radius="16dp" />
        </shape>
    </item>

</layer-list>


