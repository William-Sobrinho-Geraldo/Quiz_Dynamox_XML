<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Forma externa com gradiente -->
    <item>
        <shape>
            <solid android:color="@android:color/transparent" />
            <stroke
                android:width="3dp"
                android:color="#FF5722"/>
            <gradient
                android:startColor="#FF5722"
                android:centerColor="#CC481A"
                android:endColor="#76110C"
                />


            <corners android:radius="8dp" />
        </shape>
    </item>

    <!-- Forma interna com a cor de fundo (ou transparente) -->
    <item android:left="8dp" android:right="8dp" android:top="8dp" android:bottom="8dp">
        <shape>
            <solid android:color="@android:color/transparent" /> <!-- Pode ser transparente ou a cor de fundo desejada -->
            <corners android:radius="16dp" />
        </shape>
    </item>
</layer-list>

